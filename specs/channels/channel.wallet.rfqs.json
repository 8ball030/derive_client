{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "WalletRfqsChannelSchema": {
      "type": "object",
      "required": [
        "wallet"
      ],
      "properties": {
        "wallet": {
          "title": "wallet",
          "type": "string",
          "description": "Account (wallet) of RFQ market maker"
        }
      },
      "additionalProperties": false
    },
    "WalletRfqsNotificationSchema": {
      "type": "object",
      "required": [
        "method",
        "params"
      ],
      "properties": {
        "method": {
          "title": "method",
          "type": "string"
        },
        "params": {
          "type": "object",
          "$ref": "#/definitions/WalletRfqsNotificationParamsSchema",
          "field_many": false
        }
      },
      "additionalProperties": false
    },
    "WalletRfqsNotificationParamsSchema": {
      "type": "object",
      "required": [
        "channel",
        "data"
      ],
      "properties": {
        "channel": {
          "title": "channel",
          "type": "string",
          "description": "Subscribed channel name"
        },
        "data": {
          "title": "data",
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/RFQResultPublicSchema",
            "field_many": true
          }
        }
      },
      "additionalProperties": false
    },
    "RFQResultPublicSchema": {
      "$ref": "./openapi-spec.json#/components/schemas/RFQResultPublicSchema"
    },
    "LegUnpricedSchema": {
      "type": "object",
      "required": [
        "amount",
        "direction",
        "instrument_name"
      ],
      "properties": {
        "amount": {
          "title": "amount",
          "type": "string",
          "format": "decimal",
          "description": "Amount in units of the base"
        },
        "direction": {
          "title": "direction",
          "type": "string",
          "enum": [
            "buy",
            "sell"
          ],
          "description": "Leg direction"
        },
        "instrument_name": {
          "title": "instrument_name",
          "type": "string",
          "description": "Instrument name"
        }
      },
      "additionalProperties": false
    },
    "WalletRfqsPubSubSchema": {
      "type": "object",
      "required": [
        "channel_params",
        "notification"
      ],
      "properties": {
        "channel_params": {
          "type": "object",
          "$ref": "#/definitions/WalletRfqsChannelSchema",
          "field_many": false
        },
        "notification": {
          "type": "object",
          "$ref": "#/definitions/WalletRfqsNotificationSchema",
          "field_many": false
        }
      },
      "additionalProperties": false
    }
  },
  "title": "{wallet}.rfqs",
  "description": "Subscribe to RFQs directed to a given wallet.",
  "type": "object",
  "allOf": [
    {
      "$ref": "#/definitions/WalletRfqsPubSubSchema"
    }
  ]
}